---
import Head from '../components/Head.astro'
const data = Astro.fetchContent('../pages/blog/*.md')
---
<html lang="en">
<body>
	<div id="wrapper">
		<header>
				<h1>Company Name</h1>
                <p>Title: </p>
                <p>This is my blog</p>
		</header>
		<nav>
			<div>
{data.slice(0, 3).map((post) => (
  <article>
    <h1>{post.title}</h1>
    <p>{post.description}</p>
    <a href={post.url}>Read more</a>
  </article>
))}
</div>
		</nav>
		<main>
			<slot />
		</main>
	</div>
</body>
</html>
